<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="180dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:text="@string/item_hufu"
                android:background="@drawable/home_bottom_text"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/see_detail"
                android:gravity="right"
                android:padding="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/home_bottom_title"
            android:paddingTop="2dp"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textSize="16sp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2" />
        <TextView
            android:id="@+id/home_bottom_content"
            android:lines="5"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:src="@mipmap/home_bottom_img"
        android:padding="10dp"
        android:id="@+id/home_image"
        android:scaleType="fitXY"
        android:layout_width="185dp"
        android:layout_height="180dp" />

</LinearLayout>