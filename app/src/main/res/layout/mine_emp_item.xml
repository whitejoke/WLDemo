<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gry"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head_toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.hdit.wldemo.widget.RoundImageView
                android:id="@+id/member_emp_head"
                android:padding="10dp"
                android:src="@mipmap/emp_head"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/member_emp_head_change"
                android:textColor="@color/blue"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="更换头像"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="用户名"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@null"
                android:id="@+id/member_emp_name"
                android:text="Viilen slam Hu"
                android:textSize="@dimen/mine_text"
                android:textColor="@color/black"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/uc_black"
                android:drawablePadding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="性别"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/member_emp_sex"
                android:text="男"
                android:textSize="@dimen/mine_text"
                android:textColor="@color/black"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/uc_black"
                android:drawablePadding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="工号"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@null"
                android:id="@+id/member_emp_jobnum"
                android:text="A8725158"
                android:textSize="@dimen/mine_text"
                android:textColor="@color/black"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/uc_black"
                android:drawablePadding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="房间号"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:background="@null"
                android:text="1003"
                android:textSize="@dimen/mine_text"
                android:textColor="@color/black"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/uc_black"
                android:drawablePadding="10dp"
                android:id="@+id/member_emp_room" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="入职时间"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/member_emp_entrytime"
                android:text="2015-04-15"
                android:textSize="@dimen/mine_text"
                android:textColor="@color/black"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/uc_black"
                android:drawablePadding="10dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_emp_save"
            android:textColor="@color/white"
            android:text="@string/btn_save"
            android:background="@drawable/btn_blue"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>